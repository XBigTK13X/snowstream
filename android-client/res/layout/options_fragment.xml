<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/download_update_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Snowstream" />

        <TextView
            android:id="@+id/version_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snowstream" />

        <Button
            android:id="@+id/debug_log_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toggle Debug Logging" />

        <TextView
            android:id="@+id/debug_log_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/server_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a server to use" />
        <RadioGroup
            android:id="@+id/server_url_radios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Snowstream.Radio"
            android:textColor="@color/primary_text">

            <RadioButton
                android:id="@+id/prod_server_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settler"
                android:theme="@style/Theme.Snowstream.Radio"
                android:textColor="@color/primary_text"/>

            <RadioButton
                android:id="@+id/dev_server_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vondoom"
                android:theme="@style/Theme.Snowstream.Radio"
                android:textColor="@color/primary_text"/>
        </RadioGroup>



    </LinearLayout>
</ScrollView>